@model Automate.WEB.Models.DrinkWithImgViewModel

<div class="drinkItem">
        <div class="imgDrink" data-index="@Model.Id" data-picId="@Model.PictureId">
            @Html.Raw("<img class='attachImg' style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.Image) + "\" />") 
        </div>
            @Html.DisplayNameFor(model => model.Name)
        
            <div class="drinkName" style="display:inline-block">@Html.DisplayFor(model => model.Name)</div>
         
            @Html.DisplayNameFor(model => model.Number)

        <div class="drinkNumber" style="display:inline-block">@Html.DisplayFor(model => model.Number)</div>

            @Html.DisplayNameFor(model => model.Price)

        <div class="drinkPrice" style="display:inline-block">@Html.DisplayFor(model => model.Price)</div>
    </div>

