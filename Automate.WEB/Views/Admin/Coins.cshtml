@model IEnumerable<Automate.WEB.Models.CoinViewModel>

@{
    ViewBag.Title = "Монеты";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Монеты</h2>

<p>
    @Html.ActionLink("Добавить", "CreateCoin") |
    @Html.ActionLink("Напитки", "Drinks")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nominal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blocked)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nominal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Blocked)
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditCoin", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeleteCoin", new { id=item.Id })
        </td>
    </tr>
}

</table>
