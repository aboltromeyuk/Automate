@model IEnumerable<Automate.WEB.Models.PictureViewModel>

<h2>Мои изображения</h2>

<p>
    @Html.ActionLink("Добавить изображение", "CreatePicture")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw("<img id="+item.Id+" style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
            </td>
        </tr>
    }

</table>
